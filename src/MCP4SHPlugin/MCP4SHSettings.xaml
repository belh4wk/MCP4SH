<UserControl x:Class="MCP4SH.MCP4SHSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="700">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Padding="12" Margin="0">
            <StackPanel Orientation="Vertical">

                <!-- Header -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                    <TextBlock Text="MCP4SH – Normalized telemetry for SimHub effects"
                               FontSize="18"
                               FontWeight="Bold"
                               TextWrapping="Wrap" />
                    <TextBlock x:Name="VersionText"
                               Margin="0,4,0,0"
                               Foreground="#FFBBBBBB"
                               Text="Version: dev build" />
                </StackPanel>

                <TextBlock Text="MCP4SH normalizes raw game telemetry into human-friendly envelopes for SimHub effects (road feel, suspension, slip, braking, engine &amp; tyres, TC, clutch, drivetrain, surface)."
                           TextWrapping="Wrap"
                           Margin="0,0,0,8" />
                <TextBlock Text="All MCP4SH outputs are available under &quot;Available properties&quot; → &quot;MCP4SHPlugin.*&quot;."
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"
                           Foreground="#FFBBBBBB" />

                <!-- Output tuning (safe section) -->
                <GroupBox Header="Output tuning (safe to tweak)" Margin="0,0,0,12">
                    <StackPanel Margin="8">

                        <!-- Global gain -->
                        <TextBlock Text="Global gain"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,2" />
                        <DockPanel Margin="0,0,0,6">
                            <Slider x:Name="GlobalGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding GlobalGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.25"
                                    SmallChange="0.05"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=GlobalGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                            <TextBlock Text="x"
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center" />
                        </DockPanel>
                        <TextBlock Text="Overall strength for all MCP4SH effects.Slider left = almost nothing.&#10;Slider right = everything hits much harder.&#10;Start around 1.00; only go above 2.0 if your rig feels weak. Start at 1.00; stay roughly between 0.5 and 2.0."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8" />

                        <!-- Road feel -->
                        <TextBlock Text="Road feel (front / rear)"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="RoadFeelGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding RoadFeelGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=RoadFeelGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="How much you feel the general road texture and chassis movement (not big hits).&#10;Left = mostly smooth, only light background rumble.&#10;Right = strong constant road buzz and body movement."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8" />

                        <!-- Suspension vibration -->
                        <TextBlock Text="Suspension vibration"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="SuspVibrationGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding SuspensionVibrationGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=SuspVibrationGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="How much you feel continuous suspension movement over bumps and kerbs.&#10;Left = soft, only big movement shows up.&#10;Right = every ripple and kerb gives clear vibration."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8" />

                        <!-- Suspension impacts -->
                        <TextBlock Text="Suspension impacts / bumpstops"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="SuspImpactGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding SuspensionImpactGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=SuspImpactGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="How hard big hits land: sharp bumps, landing from jumps, smashing kerbs.&#10;Left = gentle thuds.&#10;Right = strong punches on each big impact."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8" />

                        <!-- Engine & tyres -->
                        <TextBlock Text="Engine &amp; tyres (corner wave)"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="EngineTyresGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding EngineTyresGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=EngineTyresGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="Strength of the corner-load wave – tyres working in the turn, car leaning and loading up.&#10;Left = corners feel light and flat.&#10;Right = you really feel the car load up and release through the corner."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8" />

                        <!-- Brake feel -->
                        <TextBlock Text="Brake feel"
                                   FontWeight="SemiBold"
                                   Margin="0,4,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="BrakeFeelGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding BrakeFeelGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=BrakeFeelGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="How much you feel brake pedal pressure and weight transfer when slowing down.&#10;Left = soft, vague braking feedback.&#10;Right = firm, clear build-up as you press the pedal harder."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,4" />

                        <!-- Brake+slip -->
                        <TextBlock Text="Brake + slip (brake-n-slip)"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="BrakeNSlipGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding BrakeNSlipGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=BrakeNSlipGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="Hybrid of brake pressure + tyre slip right before lock-up.&#10;Left = almost no ‘on the edge’ feeling.&#10;Right = strong signal when you’re close to max braking grip."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,4" />

                        <!-- ABS -->
                        <TextBlock Text="ABS / wheel lock"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="ABSGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding ABSGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=ABSGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="Strength of ABS / wheel-lock pulses when the tyres are starting to lock.&#10;Left = very subtle tapping.&#10;Right = aggressive pulsing when you’re over the limit."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,4" />

                        <!-- TC -->
                        <TextBlock Text="Traction control (TC activity)"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="TCGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding TCGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=TCGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="How strong traction / wheelspin under power feels in a straight line.&#10;Left = barely notice TC or spin.&#10;Right = clear chatter and rumble when the tyres fight for grip on throttle."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,4" />

                        <!-- Clutch -->
                        <TextBlock Text="Clutch freewheel"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="ClutchGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding ClutchFreeGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=ClutchGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="How strong free-rev / mis-shift spikes feel when the clutch is in and the engine flares.&#10;Left = almost no kick on bad shifts.&#10;Right = big spikes when you over-rev between gears."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,4" />

                        <!-- Gearshift -->
                        <TextBlock Text="Gearshift kicks"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,2" />
                        <DockPanel Margin="0,0,0,4">
                            <Slider x:Name="GearshiftGainSlider"
                                    Minimum="0.25"
                                    Maximum="2.50"
                                    Value="{Binding GearshiftGain}"
                                    TickFrequency="0.25"
                                    IsSnapToTickEnabled="True"
                                    Width="260" />
                            <TextBlock Text="{Binding ElementName=GearshiftGainSlider, Path=Value, StringFormat=F2}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Width="40" />
                        </DockPanel>
                        <TextBlock Text="Strength of the gear-change thump (upshift/downshift).&#10;Left = smooth, soft shifts.&#10;Right = solid kick each time you change gear."
                                   Foreground="#FFBBBBBB"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8" />

                        <TextBlock Text="All sliders are clamped to safe ranges and only scale the existing envelopes – they do not change the underlying detection logic so there's no risk of fully breaking the plugin or effects driven by it."
                                   Foreground="#FFAAAAAA"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,12,0,0" />
                    </StackPanel>
                </GroupBox>
                <!-- Debug / logging -->
                <GroupBox Header="Debug / logging (for support)" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <CheckBox Content="Enable debug mode (auto-save logs)"
                          IsChecked="{Binding DebugMode}"
                          Margin="0,0,0,4" />

                        <TextBlock Text="When this is enabled MCP4SH will automatically record a CSV log file under SimHub\Logs\MCP4SH\. Turn it on, reproduce the issue, then turn it off again and send the latest file."
                           Foreground="#FFBBBBBB"
                           FontSize="11"
                           TextWrapping="Wrap" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
